<h1>Edit Password</h1>

<!-- form_with needs route users -->
<%= form_with model: Current.user, url: edit_password_path do |form| %>
    <% if form.object.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
            <h2><%= pluralize(Current.user.errors.count, "error") %> prohibited this user from being saved:</h2>
            <ul>
                <% form.object.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: 'password' %>
    </div>
    
    <div class="mb-3">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: 'password' %>
    </div>
    
    <div class="mb-3">
        <%= form.submit "Update Password", class: "btn btn-primary" %>
    </div>

<% end %>